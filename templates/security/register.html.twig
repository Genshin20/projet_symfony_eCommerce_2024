{% extends "base.html.twig"%}

{% block title %}
	S'inscrire
	{{ parent() }}

{% endblock %}

{% block body %}
	<section class="contenair mt-2">
		<h1 class="text-center">S'inscrire</h1>
		{# afficher formulaire #}
		{{ form_start(form, {attr:{class: 'card w-75 mx-auto'}}) }}
		{{ dump() }}

		<div class="row">
			<div class="col-md-6">
				{{ form_row(form.firstName) }}
			</div>
			
			<div class="col-md-6">
				{{ form_row(form.lastName) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.telephone) }}
			</div>

			<div class="col-md-6">
				{{ form_row(form.email) }}
			</div>
			<div class="col-md-6">
				{{ form_row(form.password) }}
			</div>
			
			
			<div class="col-md-6">
				{{ form_row(form.birthDate) }}
			</div>

		</div>
		{{ form_widget(form) }}
		<button type="submit" class="btn btn-primary">S'inscrire</button>
		{{ form_end(form) }}
	</section>
{% endblock %}
